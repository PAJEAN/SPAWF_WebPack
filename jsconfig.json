{
    "compilerOptions": {
        "target": "ES6", // Specifies which default library (lib.d.ts) to use.
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "checkJs": true, // Enable type checking on JavaScript files.
        "baseUrl": ".",
        "paths": {
            "JS/*": ["src/js/*"],
            "CSS/*": ["src/css/*"]
        }
    },
    "include": [
        "src/**/*",
        "css.d.ts"
    ]
}